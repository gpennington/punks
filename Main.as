package src.punks {		import flash.display.MovieClip;		public class Main extends MovieClip {				//var splashScreen:SplashScreen;		var menu:PunksMenu;		var howToPlay;		var levelSelect:LevelSelect;		var game:PunksGame;				public static var mainRef;				public function Main() {						mainRef = this;						showMenu();					}		//		public function showSplash(){//			//			//slashScreen = new SplashScreen();//			//addChild(slashScreen);//		}				public function showMenu(){						if ( game ){				game.remove();				removeChild(game);				game = null;				trace("removed game");			}			if ( levelSelect ){				removeChild(levelSelect);				levelSelect = null;				trace("removed level select");			}			if ( howToPlay ){				removeChild(howToPlay);				howToPlay = null;				trace("removed howToPlay");			}						menu = new PunksMenu();			addChild(menu);		}				public function showLevelSelect(){						if ( game ){				game.remove();				removeChild(game);				game = null;				trace("removed game");			}			if ( menu ){				removeChild(menu);				menu = null;				trace("removed menu");			}						levelSelect = new LevelSelect();			addChild(levelSelect);		}				public function showGame(level){						if ( levelSelect ){				removeChild(levelSelect);				levelSelect = null;				trace("removed levelSelect");			}			if ( game ){				game.remove();				removeChild(game);				game = null;				trace("removed game");			}						game = new PunksGame(level);			addChild(game);					}									}	}