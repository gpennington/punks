package src.punks {	import flash.filters.GlowFilter	public class Spark extends Projectile{				public function Spark(_shooter, _color, _angle, _speed:Number = 10, _damage:Number = 2){			shooter = _shooter;			angle = _angle;			speed = _speed + ( ( Math.random() * 6 ) - 3) ;  //speed plus -3 to 3			damage = _damage;			friendly = shooter.friendly;			//rotation = angle;			super(_shooter, _angle, speed, damage);			life = 24;			inertia = 0.75;			//Visual			if (Settings.quality == "high"){				graphics.beginFill( 0xffffff, 1);			}			else{				graphics.beginFill( _color, 1);			}			graphics.drawCircle(0,0,2);			graphics.endFill();						if (Settings.quality == "high"){				var glow:GlowFilter = new GlowFilter(_color, 1, 10, 10, 2);				filters = [glow];			}		}		override public function behavior():void{			super.behavior();					}		override public function move(){						super.move()						//speed x radians			y += speed * Math.sin((angle - 90) * (Math.PI / 180));			x += speed * Math.cos((angle - 90) * (Math.PI / 180));									speed -= inertia;			if ( speed <= 0){				speed = 0;			}						if ( speed <= 2){				alpha -= 0.25;			}					}		override public function kill(){									remove();		}				override public function remove(){															super.remove();		}	}}