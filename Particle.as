package src.punks {	import flash.display.Shape;	import flash.events.Event;		import src.core.Game;	public class Particle extends Shape{				var counter:int = 0;		public function Particle(){						//Visual			graphics.beginFill( 0xffff33, 1);			graphics.drawRect(0,0,1,1);			graphics.endFill();			//alpha = 1;			addEventListener(Event.ENTER_FRAME, onFrame, false, 0, true);		}				private function onFrame(e:Event){			counter++;			x += (Math.random() * 4) - 2;						alpha -= 0.1;						if ( counter >= 10 ){				removeEventListener(Event.ENTER_FRAME, onFrame);				Game.remove(this);			}		}				public function remove(){						if ( this.hasEventListener(Event.ENTER_FRAME) ){				removeEventListener(Event.ENTER_FRAME, onFrame);			}			Game.remove(this);					}	}}